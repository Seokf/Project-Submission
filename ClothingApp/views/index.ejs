<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Clothing Haul</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa; 
      color: #212529; 
      padding-top: 40px; 
    }

    .container {
      max-width: 1200px;
    }

    .navbar {
      background: linear-gradient(90deg, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.6)); 
      border-bottom: 1px solid rgba(255, 255, 255, 0.1); 
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); 
      padding-top: 0.5rem; 
      padding-bottom: 0.5rem; 
    }

    .navbar-brand {
      font-size: 1.75rem; 
      font-weight: bold; 
      color: #f8f9fa; 
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    }

    .navbar-brand:hover {
      color: lightgrey; 
      text-decoration: none; 
    }

    .navbar-nav .nav-link {
      color: #f8f9fa;
      margin-left: 1rem; 
      font-size: 1.1rem; 
    }

    .navbar-nav .nav-link:hover {
      color: lightgrey; 
      text-decoration: underline; 
      transition: color 0.3s ease-in-out, text-decoration 0.3s ease-in-out; 
    }

    .card {
      background-color: #fff; 
      border: none;
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out; 
      height: 100%; 
      position: relative; 
      border-radius: 8px; 
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    }

    .card:hover {
      transform: translateY(-10px); 
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); 
    }

    .card-img-top {
      height: 300px; 
      object-fit: cover;
      border-top-left-radius: 8px; 
      border-top-right-radius: 8px; 
    }

    .card-body {
      padding: 1.5rem; 
      text-align: left; 
    }

    .card-title {
      font-size: 1.5rem; 
      font-weight: bold; 
      margin-bottom: 0.5rem; 
    }

    .card-text {
      color: #6c757d;
      margin-bottom: 0.5rem; 
    }

    .btn-primary {
      background-color: #007bff; 
      border-color: #007bff; 
    }

    .btn-primary:hover {
      background-color: #0056b3; 
    }

    .btn-danger {
      background-color: #dc3545; 
      border-color: #dc3545; 
    }

    .btn-danger:hover {
      background-color: #c82333; 
    }

    .section-title {
      font-size: 2rem; 
      font-weight: bold; 
      margin-bottom: 2rem; 
      text-align: center; 
    }

    .mt-5 {
      margin-top: 5rem !important;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-dark fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Clothing Haul</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/addProduct">Add new product</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-5 pt-3">
    <div class="text-center mb-4">
      <h2 class="section-title text-dark">Products</h2>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% for(let i=0; i < products.length; i++) { %>
        <div class="col">
          <div class="card h-100">
            <img src="images/<%= products[i].image %>" class="card-img-top" alt="<%= products[i].productName %>">
            <div class="card-body">
              <h5 class="card-title">
                <a href="/product/<%= products[i].productId %>" class="text-dark text-decoration-none">
                  <%= products[i].productName %>
                </a>
              </h5>
              <p class="card-text">Quantity: <%= products[i].quantity %></p>
              <p class="card-text">Price: $<%= products[i].price.toFixed(2) %></p>
              <div class="d-flex justify-content-between">
                <a href="/editProduct/<%= products[i].productId %>" class="btn btn-primary">Edit</a>
                <a href="/deleteProduct/<%= products[i].productId %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
